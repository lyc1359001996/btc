
@{
    ViewBag.Title = "Register";
}

<!doctype html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>注册</title>
    <link rel="stylesheet" type="text/css" href="~/css/registerstyles.css">
</head>
<body>


    <div class="wrapper">

        <div class="container">
            <div>欢 迎 注 册</div>
            <form class="form" id="reg-form">
                <input type="text" id="uid" placeholder="用户名" easyform="length:4-16;char-normal;real-time;" message="用户名必须为4—16位的英文字母或数字" easytip="disappear:lost-focus;theme:red;" autocomplete="off">

                <input type="password" id="psw1" placeholder="密码" easyform="length:6-16;real-time" message="密码必须为6—16位" easytip="disappear:lost-focus;theme:red;">

                <input type="password" id="psw2" placeholder="确认密码" easyform="length:6-16;equal:#psw1;real-time" message="两次密码输入要一致" easytip="disappear:lost-focus;theme:red;">

                <input type="text" id="tel" placeholder="电话" easyform="length:8-11;real-time;" message="电话格式要正确" easytip="disappear:lost-focus;theme:red;" autocomplete="off">

                <input type="text" id="email" placeholder="邮箱" easyform="email;real-time;" message="Email格式要正确" easytip="disappear:lost-focus;theme:red;" autocomplete="off">

                <input type="button" value="注册" id="register">
            </form>
        </div>


        <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>

    </div>

    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript">
        $(document).keyup(function (event) {
            if (event.keyCode == 13) {
                $("#register").click();
            }
        });
    </script>
    </body>
</html>